{
  "name": "node-boilerplate",
  "version": "0.0.1",
  "description": "Coinsop Node Boilerplate",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "clean": "rm -rf dist",
    "copy": "cp package.json dist/. && cp package-lock.json dist/. && cp yarn.lock dist/. && cp README.md dist/. && cp LICENSE dist/.",
    "build": "npm run lint && npm run clean && mkdir dist && babel src -s -d dist && npm run copy",
    "test": "npm run lint && babel-node ./node_modules/.bin/isparta cover _mocha",
    "start": "npm run build && node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:coinsop/node-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "coinsop",
    "nodejs"
  ],
  "author": "Coinsop",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.7.0",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm test && npm run build"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ]
  }
}
